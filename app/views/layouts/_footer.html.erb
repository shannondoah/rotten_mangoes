<footer id="footer">
    
  <% if current_user %>
    <div class="login-panel"> Signed in as <%= current_user.full_name %>  

      <% if current_user.admin %>
        | <%= link_to "Admin Panel", admin_users_path %>
      <%end%>

      <% if mimicing? %>
        | Actually logged in as <%= actual_user.full_name %>. <%= link_to "Switch back", session_path("current"), method: :delete %>. |
      <% end %>

      (<%= link_to "Log out", session_path("current"), method: :delete %>)

    </div>
  <% else %>
    <div class="login-panel">
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    </div>
  <% end %>

  <%= link_to button_tag("Submit a movie!", :class => "btn btn-default", :id => 'submitnew'), new_movie_path %>

</footer>